<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/im_pause_dictation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_record_select"
        android:src="@drawable/ic_pause_dictation"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:id="@+id/im_start_dictation"
            android:src="@drawable/ic_start_dictation"
            android:background="@drawable/im_record_select"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tips_dication"
            android:text="开始听写"
            android:textSize="27sp"
            android:layout_below="@+id/im_start_dictation"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_dictation_advice"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Just Listen"
            android:textStyle="italic"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Ll_dictation"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="输入单词"
            android:id="@+id/et_answer"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="提交"
            android:id="@+id/btn_submit"
            android:background="@drawable/btn_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
