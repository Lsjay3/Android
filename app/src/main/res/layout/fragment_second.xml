<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--
    扫描文章布局
    -->
    <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:visibility="gone"
            android:id="@+id/tv_your_photo"
            android:text="您的图片:"/>

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:id="@+id/image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描中..."
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_scanning"
        android:textSize="16sp"
        android:layout_gravity="center"/>
    <ScrollView
        android:visibility="invisible"
        android:id="@+id/sv_scroll"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_scan_result"
                    android:text="扫描结果:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/im_play_scan"
                    android:layout_toRightOf="@id/tv_scan_result"
                    android:background="@drawable/img_select"
                    android:src="@drawable/ic_laba"/>
                <Button
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:text="添 加"
                    android:background="@drawable/btn_reg"
                    android:id="@+id/btn_add_scan"
                    android:layout_gravity="right"/>
            </RelativeLayout>
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_content"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    />
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tras_result"
                    android:text="翻译结果:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/im_play"
                    android:layout_toRightOf="@id/tv_tras_result"
                    android:background="@drawable/img_select"
                    android:src="@drawable/ic_laba"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="添加"
                    android:id="@+id/btn_add_result"
                    android:background="@drawable/btn_reg"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_content_trans"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    />
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:id="@+id/btn_again_scan"
        android:text="再次扫描"
        android:background="@drawable/btn_selector"/>
</LinearLayout>