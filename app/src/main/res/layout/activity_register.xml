<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/register_bg"
    android:layout_height="match_parent"
    tools:context=".Register">

    <RelativeLayout
        android:id="@+id/Rela_regsiter"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tips"
            android:textSize="20sp"
            android:text="注册成功!点击" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/tv_go_login"
            android:textSize="20sp"
            android:onClick="Go_Login"
            android:layout_toRightOf="@id/tips"
            android:textColor="#64D638"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:textColorHint="#fff"
        android:hint="用户名"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_user_name"
            android:theme="@style/MyEditText"
            android:textColor="#ffff"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginTop="180dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:id="@+id/tv_is_exist" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:hint="密码"
        android:textColorHint="#fff"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_user_pass"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:textColor="#ffff"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/tv_pass_is_null"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:hint="联系电话"
        android:textColorHint="#fff"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_user_number"
            android:theme="@style/MyEditText"
            android:textColor="#ffff"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:id="@+id/tv_number_invalid"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_reg_login_selector"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="注 册"
        android:id="@+id/btn_input_reg"
        android:textStyle="bold"
        android:onClick="Reg_activity"
        android:textColor="#fff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/tv_forget_pass"
        android:text="已有账号？"
        android:layout_marginTop="20dp"
        android:background="@drawable/img_select"
        android:onClick="Exist_num"
        android:layout_gravity="center" />
</LinearLayout>