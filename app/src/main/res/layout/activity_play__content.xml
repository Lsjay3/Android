<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".Play_Content">
    <!--
     播放文章界面布局
     -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="iEnglish"
            android:textColor="#000"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_play_content"
            android:layout_above="@id/tv_play_content_trans"
            android:textSize="16sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_play_content_trans"
            android:visibility="gone"
            android:textSize="16sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tv_play_hidden"
            android:layout_below="@+id/tv_play_content_trans"
            android:textSize="42sp"
            android:text="Keep Focused!"
            android:visibility="gone"
            android:textColor="#000"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_progress"/>
        <SeekBar
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/sb_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_duration"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_yuanwen"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="@drawable/img_select" />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/im_prev"
            android:background="@drawable/img_select"
            android:src="@drawable/ic_shangyiqu"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/im_play"
            android:background="@drawable/img_select"
            android:src="@drawable/ic_bofang"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/im_play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_select"
            android:layout_height="wrap_content"
            android:id="@+id/im_next"
            android:src="@drawable/ic_xiayiqu"/>
        <Spinner
            android:layout_marginTop="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:id="@+id/spinner"
            android:background="@null"
            android:layout_marginRight="5dp"
            android:entries="@array/speed"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>

</RelativeLayout>